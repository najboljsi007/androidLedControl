<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tadejbukovec.ledcontroller.MenuActivity"
    tools:showIn="@layout/activity_menu">

    <Button
        android:text="Kill Masheen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/killBtn"
        android:layout_marginBottom="71dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="200dp"
        android:layout_marginTop="14dp">

    <Button
        android:text="Spin To Win"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/servoBtn"
        android:layout_marginBottom="64dp"
        android:layout_alignParentStart="true"
        android:layout_weight="0.5"/>

    <Button
        android:text="Dizzle da shizzle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/servoRandBtn"
        android:layout_marginBottom="64dp"
        android:layout_alignParentStart="true"
        android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="90dp"
        android:layout_marginTop="14dp">

        <Button
            android:text="WHITE LITE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ledWhiteBtn"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"

            android:layout_weight="0.5" />

        <Button
            android:text="KOLOR LITE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ledColorBtn"
            android:layout_alignBaseline="@+id/ledWhiteBtn"
            android:layout_alignBottom="@+id/ledWhiteBtn"
            android:layout_alignParentEnd="true"
            android:layout_weight="0.5" />
    </LinearLayout>
</RelativeLayout>
