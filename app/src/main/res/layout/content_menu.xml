<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tadejbukovec.ledcontroller.MenuActivity"
    tools:showIn="@layout/activity_menu">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingTop="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="90dp"
            android:layout_weight="0.5">

            <Button
                android:text="KOLOR LITE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ledColorBtn"
                android:layout_alignBaseline="@+id/ledWhiteBtn"
                android:layout_alignBottom="@+id/ledWhiteBtn"
                android:layout_alignParentEnd="true"
                android:layout_weight="1" />

            <Button
                android:text="WHITE LITE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ledWhiteBtn"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"

                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="0.5" />

        <Switch
            android:text="Rotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/rotation"
            android:layout_weight="0.5" />

        <Switch
            android:text="Rotation mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/rotationmode"
            android:layout_weight="0.5" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/speed"
            android:layout_weight="0.5" />

    </LinearLayout>

</RelativeLayout>
